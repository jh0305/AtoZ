<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page trimDirectiveWhitespaces="true"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>

<c:set var="qnaCnt" value="${dataMap.qnaCnt}" />
<c:set var="crReqCnt" value="${dataMap.crReqCnt}" />
<c:set var="crExpCnt" value="${dataMap.crExpCnt}" />
<c:set var="payHisCnt" value="${dataMap.payHisCnt}" />

<c:set var="selectToDayQnaList" value="${getListWidgetData.selectToDayQnaList}" />
<c:set var="selectContractReqClientList" value="${getListWidgetData.selectContractReqClientList}" />
<c:set var="selectContractExpClientList" value="${getListWidgetData.selectContractExpClientList}" />
<c:set var="selectToDayPayList" value="${getListWidgetData.selectToDayPayList}" />

<div class="container-xl">
	<div class="row row-deck row-cards" style="margin-bottom: 10px;">
		<div class="col-sm-6 col-lg-3">
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div class="header wgheader">문 의 사 항</div>
					</div>
					<div class="row wgrow">
						<div class="col-auto">
							<span class="bg-yellow text-white avatar"> <svg xmlns="http://www.w3.org/2000/svg"
									class="icon icon-tabler icon-tabler-phone-call" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff"
									fill="none" stroke-linecap="round" stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
  <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
  <path d="M15 7a2 2 0 0 1 2 2" />
  <path d="M15 3a6 6 0 0 1 6 6" />
</svg>
							</span>
						</div>
						<div class="col wgcol">
							<div class="h1 mb-3">
								<strong>${qnaCnt}</strong>&nbsp;건
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-lg-3">
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div class="header wgheader">계 약 요 청</div>
					</div>
					<div class="row wgrow">
						<div class="col-auto">
							<span class="bg-purple text-white avatar"> <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-wifi"
									width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round"
									stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
  <line x1="12" y1="18" x2="12.01" y2="18" />
  <path d="M9.172 15.172a4 4 0 0 1 5.656 0" />
  <path d="M6.343 12.343a8 8 0 0 1 11.314 0" />
  <path d="M3.515 9.515c4.686 -4.687 12.284 -4.687 17 0" />
</svg>
							</span>
						</div>
						<div class="col wgcol">
							<div class="h1 mb-3">
								<strong>${crReqCnt}</strong>&nbsp;건
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-lg-3">
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div class="header wgheader">계 약 만 료 예 정</div>
					</div>
					<div class="row wgrow">
						<div class="col-auto">
							<span class="bg-green text-white avatar"> <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-x"
									width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round"
									stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
  <circle cx="9" cy="7" r="4" />
  <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
  <path d="M17 9l4 4m0 -4l-4 4" />
</svg>
							</span>
						</div>
						<div class="col wgcol">
							<div class="h1 mb-3">
								<strong>${crExpCnt}</strong>&nbsp;건
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-lg-3">
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div class="header wgheader">결 제</div>
					</div>
					<div class="row wgrow">
						<div class="col-auto">
							<span class="bg-blue text-white avatar"> <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-coin"
									width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round"
									stroke-linejoin="round">
  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
  <circle cx="12" cy="12" r="9" />
  <path d="M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 0 0 0 4h2a2 2 0 0 1 0 4h-2a2 2 0 0 1 -1.8 -1" />
  <path d="M12 6v2m0 8v2" />
</svg>
							</span>
						</div>
						<div class="col wgcol">
							<div class="h1 mb-3">
								<strong>${payHisCnt}</strong>&nbsp;건
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row row-deck row-cards dashrow" style="margin-bottom: 10px;">
		<div class="col-lg-4">
			<div class="card">
				<div class="card-header">
					<div class="card-title" style="padding-left: 40%; font-weight: bold; font-size: 1.5em;">금일 문의사항 현황</div>
				</div>
				<div class="table-responsive">
					<table class="table table-vcenter table-mobile-md card-table">
						<thead>
							<tr>
								<th>작성자</th>
								<th>제목</th>
								<th>내용</th>
							</tr>
						</thead>
						<tbody>
							<c:forEach items="${selectToDayQnaList}" var="qna">
								<tr>
									<td>
										<div class="d-flex py-1 align-items-center">
											<div class="flex-fill">
												<div class="font-weight-medium">${qna.cl_name}</div>
											</div>
										</div>
									</td>
									<td>
										<div>${qna.title}</div>
									</td>
									<td>${qna.content}</td>
								</tr>
							</c:forEach>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-lg-8">
			<div class="card">
				<div class="card-header">
					<div class="card-title" style="padding-left: 40%; font-weight: bold; font-size: 1.5em;">계약 요청 현황</div>
				</div>
				<div class="table-responsive">
					<table class="table table-vcenter table-mobile-md card-table">
						<thead>
							<tr>
								<th>회원ID</th>
								<th>기업명</th>
								<th>대표자명</th>
							</tr>
						</thead>
						<tbody>
							<c:forEach items="${selectContractReqClientList}" var="contractReqClient">
								<tr>
									<td style="width: 200px;">
										<div class="d-flex py-1 align-items-center">
											<div class="flex-fill">
												<div class="font-weight-medium">${contractReqClient.cl_id}</div>
											</div>
										</div>
									</td>
									<td>${contractReqClient.cl_name}</td>
									<td>${contractReqClient.cl_ceo}</td>
								</tr>
							</c:forEach>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<div class="row row-deck row-cards dashrow" style="margin-bottom: 10px;">
		<div class="col-lg-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title" style="padding-left: 40%; font-weight: bold; font-size: 1.5em;">계약 만료 예정 현황</div>
				</div>
				<div class="table-responsive">
					<table class="table table-vcenter table-mobile-md card-table">
						<thead>
							<tr>
								<th>회원ID</th>
								<th>기업명</th>
								<th>대표자명</th>
							</tr>
						</thead>
						<tbody>
							<c:forEach items="${selectContractExpClientList}" var="contractExpClient">
								<tr>
									<td style="width: 200px;">
										<div class="d-flex py-1 align-items-center">
											<div class="flex-fill">
												<div class="font-weight-medium">${contractExpClient.cl_id}</div>
											</div>
										</div>
									</td>
									<td>${contractExpClient.cl_name}</td>
									<td>${contractExpClient.cl_ceo}</td>
								</tr>
							</c:forEach>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<div class="col-lg-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title" style="padding-left: 40%; font-weight: bold; font-size: 1.5em;">결제 현황</div>
				</div>
				<div class="table-responsive">
					<table class="table table-vcenter table-mobile-md card-table">
						<thead>
							<tr>
								<th>기업명</th>
								<th>결제 금액</th>
								<th>수수료</th>
							</tr>
						</thead>
						<tbody>
							<c:forEach items="${selectToDayPayList}" var="pay">
								<tr>
									<td style="width: 200px;">
										<div class="d-flex py-1 align-items-center">
											<div class="flex-fill">
												<div class="font-weight-medium">${pay.cl_name}</div>
											</div>
										</div>
									</td>
									<td><fmt:formatNumber type="number" maxFractionDigits="3" value="${pay.pay_amt}" />원</td>
									<td><fmt:formatNumber type="number" maxFractionDigits="3" value="${pay.pay_amt * 0.05}" />원</td>
								</tr>
							</c:forEach>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>



</div>